@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="card-title">DataTable with minimal features & hover style</h3>
                                </div>
                                <div style="text-align:right" class="col-md-6">
                                    <button id="btn-addcustomer" type="button" class="btn btn-default">Add Customer</button>
                                </div>
                                
                            </div>
                            
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<div class="modal fade" id="modal-lg">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @*<div class="overlay"><i class="fas fa-3x fa-sync-alt fa-spin"></i><div class="text-bold pt-2">Loading...</div></div>*@
            <div class="modal-header">
                <h4 id="model-title" class="modal-title">Large Modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- form start -->
                        <form role="form">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">First Name</label>
                                        <input type="text" class="form-control" id="custFirstName" placeholder="Enter First Name">
                                        <input type="text" hidden="hidden" class="form-control" id="custId">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Last Name</label>
                                        <input type="text" class="form-control" id="custLastName" placeholder="Enter Last Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Phone</label>
                                        <input type="text" class="form-control" id="custPhone" placeholder="Enter Phone">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Zip Code</label>
                                        <input type="number" class="form-control" id="custZipCode" placeholder="Enter Zip Code">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer justify-content-between pull-right">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button id="btn-savechanges" type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div class="modal fade" id="modal-ad">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @*<div class="overlay"><i class="fas fa-3x fa-sync-alt fa-spin"></i><div class="text-bold pt-2">Loading...</div></div>*@
            <div class="modal-header">
                <h4 id="model-title" class="modal-title">Add Customer</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- form start -->
                        <form role="form">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">First Name</label>
                                        <input type="text" class="form-control" id="AddFirstName" placeholder="Enter First Name">
                                        <input type="text" hidden="hidden" class="form-control" id="AddcustId">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Last Name</label>
                                        <input type="text" class="form-control" id="AddLastName" placeholder="Enter Last Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Phone</label>
                                        <input type="text" class="form-control" id="AddcustPhone" placeholder="Enter Phone">
                                    </div>
                                </div>
                               
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Zip Code</label>
                                        <input type="number" class="form-control" id="AddcustZipCode" placeholder="Enter Zip Code">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">E-Mail</label>
                                        <input type="email" class="form-control" id="AddcustEmail" placeholder="Enter E-Mail">
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                    <div class="modal-footer justify-content-between pull-right">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button id="Abtn-savechanges" type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script>

    var dataTableColumnDefinitions =
        [
            {
                "targets": 0, "render": function (data, type, row, meta) {
                    var fullName = (row.FirstName + ' ' + row.LastName);
                    return '<a href="#!">'+fullName+'</a>';
                }
            },
            { "targets": 1, "data": "Email", "sortable": true },
            { "targets": 2, "data": "Phone", "sortable": false },
            {
                "targets": 3,
                "render": function (data, type, row, meta) {
                    var linkEdit = '<a href="#!"><i class="fas fa-edit clsEditUser"></i></a>';
                    var linkDelete = '<a href="#!"><i class="fas fa-trash clsDeleteUser"></i></a>';
                    return linkEdit + " | " + linkDelete;
                },
                "sortable": false,
                "searchable": false,
                "visible": true
            }
        ];
    var dataTableOptions = {
        "paging": true,
        "processing": true,
        "scrollY": "350px",
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
        "serverSide": true,
        "columnDefs": dataTableColumnDefinitions,
        "ajax": {
            url: "@Url.Action("List","Customer")", // json datasource
            type: "POST",  // method  , by default get,
            error: function () {  // error handling
                $(".employee-grid-error").html("");
                $("#employee-grid").append('<tbody class="employee-grid-error"><tr><th colspan="3">No data found in the server</th></tr></tbody>');
                $("#employee-grid_processing").css("display", "none");

            }
        },
        "createdRow": function (row, data, dataIndex) {
            if (data.DT_RowData.pkey == 5) {
                //$(row).css('color','red')
                // Do something which you want to do with the element
            }
        }
    };

    $(function ()
    {
        var testDataTable = $('#example2').DataTable(dataTableOptions);

        $('.dataTables_filter input').off('keyup search input').on('keyup search input', function (e) {
            if (this.value.length >= 3 || e.keyCode == 13) {
                testDataTable.search(this.value).draw();
            }
            if (this.value == "") {
                testDataTable.search("").draw();
            }
            return;
        });


        $('#btn-addcustomer').click(function () {
            
            $('#modal-ad').modal({ show: true });
        })
        $('#Abtn-savechanges').click(function () {         

           
                var acustomerDetails = {
                    customerId: $('#AddcustId').val(),
                    FirstName: $('#AddFirstName').val(),
                    LastName: $('#AddLastName').val(),
                    Email: $('#AddcustEmail').val(),
                    Phone: $('#AddcustPhone').val(),
                    ZipCode: $('#AddcustZipCode').val()
                }

                console.log(acustomerDetails);
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Add", "Customer")",
                    data: acustomerDetails,
                    cache: false,
                    success: function (data) {
                        if (data.Result == true) {
                            $("#modal-ad").modal('toggle');
                            testDataTable.draw();
                        } else {
                            alert("Some error happened..")
                        }
                    }
                });
            
        })

        $(document).on('click', '.clsEditUser', function () {
            var customerId = $(this).parents('tr').attr("Id").trim();
            $("#model-title").text('Edit User');

            $.ajax({
                    type: "POST",
                    url: "@Url.Action("GetCustomer", "Customer")",
                    data: {customerId : customerId},
                    cache: false,
                success: function (data) {
                    if (data) {
                        $('#custId').val(data.CustomerId);
                        $('#custFirstName').val(data.FirstName);
                        $('#custLastName').val(data.LastName);
                        $('#custPhone').val(data.Phone);
                        $('#custZipCode').val(data.ZipCode);

                        $('#modal-lg').modal({ show: true });

                    } else {
                        alert("There was some problem editing the customer.")
                    }
                    }
                });
        });
        $('#btn-savechanges').click(function () {

            var customerId = $('#custId').val();

            if (customerId && customerId != 0) {

                var customerDetails = {
                    CustomerId: $('#custId').val(),
                    FirstName: $('#custFirstName').val(),
                    LastName: $('#custLastName').val(),
                    Phone: $('#custPhone').val(),
                    ZipCode: $('#custZipCode').val()
                }


                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Update", "Customer")",
                    data: customerDetails,
                    cache: false,
                    success: function (data) {
                        if (data.Result == true) {
                            $("#modal-lg").modal('toggle');
                            testDataTable.draw();
                        } else {
                            alert("Some error happened..")
                        }
                    }
                });
            }
        })
        $(document).on('click', '.clsDeleteUser', function () {
            var customerId = $(this).parents('tr').attr("Id").trim();
            var boolResult = confirm("Are you sure you want to delete this user?");

            if (boolResult) {

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Delete","Customer")",
                    data: {customerId : customerId},
                    cache: false,
                    success: function (data) {
                        if (data.Result == true) {
                            testDataTable.draw();
                        } else {
                            alert("Some error happened..")
                        }
                    }
                });

            }
        })
    });
</script>
