@model SampleAutoMotive.Model.UserModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid">
        <form action="@Url.Action("Edit","User")" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">First Name</label>
                    <input type="text" name="FirstName" class="form-control" id="inputEmail4" value="@Model.FirstName" placeholder="First Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Last Name</label>
                    <input type="text" name="LastName" class="form-control" id="inputPassword4" value="@Model.LastName" placeholder="Last Name">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">Age</label>
                    <input type="text" name="Age" class="form-control" value="@Model.Age" id="inputCity">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">Gender</label>
                    <select id="inputState" name="Gender" class="form-control">
                        <option @(Model.Gender == "Choose..." ? "selected" : "")>Choose...</option>
                        <option @(Model.Gender == "Male" ? "selected" : "")>Male</option>
                        <option @(Model.Gender == "Female" ? "selected" : "")>Female</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update User</button>
        </form>

    </div>
</main>

